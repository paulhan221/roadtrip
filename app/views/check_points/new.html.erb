<br>
<div class="row">
  <div class="col-md-6">
    <iframe
      width= "70%"
      height="450"
      frameborder="0" style="border:0"
      src='https://www.google.com/maps/embed/v1/place?key=<%="#{ENV["GOOGLE_KEY"]}"%>&q=<%=@checkpoint.name+@checkpoint.address%>'>
    </iframe>
  </div>
  <div class="col-md-6">
    <h2><%= @checkpoint.name %></h2><br>
    <h3><%= @checkpoint.address %></h3>
    <% if @yelp_url != "" %>
      <%= image_tag @image %><br>
      <h4>Phone number: <%= @number %></h4>
      <h4>No. of Reviews: <%= @review_count %></h4>
      <h4>Average Rating: <%= @rating %></h4>
      <%= image_tag @stars %>
    <% end %>

    <% if @yelp_url == "" %>
      <h4>A yelp review is not available for this restaurant</h4>
    <% else %>
      <h4><%= link_to "Visit their Yelp page!", @yelp_url, class: "yelp-link" %></h4>
    <% end %>
    <br>
    <%= render 'form' %>
    <%= @businesses %>
  </div>
</div>
